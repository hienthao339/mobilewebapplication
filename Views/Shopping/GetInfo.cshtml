
@{
    ViewBag.Title = "ShowToCart";
}

@using (Html.BeginForm("CheckOutInfo", "Shopping"))
{
    <main>
        @*Place Order*@
        <div class="col-lg-5 mx-auto border rounded-md p-5">
            <div class="font-medium mb-2">Shipping Info</div>
            <div class="text-gray-400 font-light text-xs">Fill your order</div>
            @*Email*@
            <div class="mt-2 text-black">
                <div class="relative w-full" data-te-input-wrapper-init>
                    <label for="email" class="text-sm">Email</label><br />
                    <input type="text" class="font-light text-black border-b py-2 pl-3 w-full mt-2" placeholder="Enter your email" name="email" required />
                </div>
            </div>
            <div class="mt-2 text-black">
                <div class="relative w-full" data-te-input-wrapper-init>
                    <label for="phone" class="text-sm">Phone</label><br />
