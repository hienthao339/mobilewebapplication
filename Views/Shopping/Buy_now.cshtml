@model WebApplication1.Models.cart

@{
    ViewBag.Title = "ShowToCart";
}
<main class="p-6">
    <div class="flex mb-lg-5">
        <a class="text-2xl font-bold" href="/Home/Index">Shopping</a>
        <div class="text-neutral-500 text-xs px-4">
            (01 Items)
        </div>
    </div>

    @if (Model != null)
    {
        <div class="row flex">
            <div class="col-lg-9">
                @*header*@
                <div class="row mb-4 pb-3 border-b font-medium">
                    <div class="col">Product</div>
                    <div class="col"></div>
                    <div class="col">Price</div>
                    <div class="col">Quantity</div>
                    <div class="col">Total Price</div>
                    <div class="col"></div>


                </div>

                @*body*@
                <div class="row flex my-3 py-4 pr-4 shadow-sm">
                    @*Product*@
                    <div class="col flex flex-wrap w-50">
                        <img src="~/@Html.DisplayFor(model => model.id_product)"
                             class="h-15" />
                    </div>
                    <div class="col flex flex-wrap w-50">
                        <div class="col grid-rows-4">
                            <div class="font-medium">@Html.DisplayFor(model => model.product.names)</div>
                            <div class="font-light text-xs">@Html.DisplayFor(model => model.product.brand.names)</div>
                            <div class="font-light text-xs">@Html.DisplayFor(model => model.product.color.names)</div>
                            <a href="/Shopping/Details_Pro/@Html.DisplayFor(model => model.product.id_product)" class="text-blue-600 font-semibold text-xs mt-4">Learn More 🡥</a>
                        </div>
                    </div>

                    @*Price*@
                    <div class="col">
                        <div class="flex">
                            $@Html.DisplayFor(model => model.product.price)
                        </div>
                    </div>

                    @*Quantity*@
                    <div class="col">
                        <div class="flex">
                            <a href="/Shopping/btn_Decrease/@Html.DisplayFor(model => model.product.id_product)" class="text-center text-black py-1 px-2.5 bg-gray-100 hover:bg-gray-200 rounded-md">
                                <i class="fa-solid fa-minus text-xs"></i>
                            </a>
                            <div class="py-1 px-4 text-center">@Html.DisplayFor(model => model.product.quantity)</div>
                            <a href="/Shopping/btn_Increase/@Html.DisplayFor(model =>model.product.id_product)" class="text-center text-black py-1 px-2.5 bg-gray-100 hover:bg-gray-200 rounded-md">
                                <i class="fa-solid fa-plus text-xs"></i>
                            </a>

                        </div>
                    </div>

                    <div class="col" style="text-align:center">
                        <div class="flex">
                            $@ViewBag.total.00
                        </div>
                    </div>


                    @*Remove/Check*@
                    <div class="col">
                        <div class="flex justify-content-between">
                            <a href="/Shopping/RemoveCart/@Html.DisplayFor(model => model.id_product)" class="bg-red-100 text-center py-1 px-2.5 hover:bg-red-200 rounded-md">
                                <i class="fa-solid fa-xmark text-red-600 text-xs"></i>
                            </a>
                            @*<input type="checkbox" class="rounded-md border-gray-200 bg-white p-2" />*@
                        </div>
                    </div>
                </div>
            </div>

            @*Place Order*@
            <div class="col-lg-3">
                <div class="font-medium mb-2">Shipping Info</div>
                <div class="text-gray-400 font-light text-xs">Fill your order</div>
