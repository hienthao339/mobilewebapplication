<main>
    <div class="p-2 grid grid-cols-4">

        <div class="col-span-2 p-5 text-xs font-semibold">
            <div class="mb-4">
                <img src="~/Images/Products/find-n2-flip-black.png" class="object-cover" />
                <div class="my-2 font-bold pb-2 my-2 border-b">Detail</div>
                <div class="d-flex">Oppo Find N2 Flip</div>
                <div class="d-flex justify-content-between my-2">
                    <p>Color</p>
                    <p>Black</p>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <p>Memory</p>
                    <p>512GB</p>
                </div>
            </div>
            <div class="my-3">
                <div class="mb-2 font-bold pb-2 my-2 border-b">Summary</div>
                <div class="d-flex justify-content-between my-2">
                    <p>Total</p>
                    <p>$0.00</p>
                </div>

                <div class="d-flex justify-content-between mb-2">
                    <p>Shipping</p>
                    <p>$0.00</p>
                </div>

                <div class="d-flex justify-content-between pb-2 mb-4 border-b">
                    <p>Discount</p>
                    <p>$0.00</p>
                </div>
                <div class="d-flex justify-content-between my-4">
                    <p>Subtotal</p>
                    <p>$0.00</p>
                </div>
                <button class="btn btn-primary hover:bg-blue-800 w-full rounded-md text-center text-xs font-semibold py-2">Edit</button>
            </div>
        </div>
        <div class="leading-loose col-span-2">
            <form class="max-w-xl m-4 p-10 bg-white rounded text-xs">
                <p class="text-gray-800 font-medium my-2">Customer information</p>
                <div class="">
                    <label class="block mb-1 text-gray-600" for="cus_name">Name</label>
                    <input class="w-full pl-3 py-2 text-gray-700 bg-gray-100 rounded" id="cus_name" name="cus_name" type="text" required="" placeholder="Your Name" aria-label="Name">
                </div>
                <div class="mt-2">
                    <label class="block mb-1 text-gray-600" for="cus_email">Email</label>
                    <input class="w-full pl-3 py-2 text-gray-700 bg-gray-100 rounded" id="cus_email" name="cus_email" type="text" required="" placeholder="Your Email" aria-label="Email">
                </div>
                <div class="mt-2">
                    <label class="block mb-1 text-gray-600" for="cus_phone">Phone</label>
                    <input class="w-full pl-3 py-2 text-gray-700 bg-gray-100 rounded" id="cus_phone" name="cus_phone" type="text" required="" placeholder="Your Email" aria-label="Email">
                </div>
                <div class="mt-2">
                    <label class=" block mb-1 text-gray-600" for="cus_addr">Address</label>
                    <input class="w-full pl-3 py-2 text-gray-700 bg-gray-100 rounded" id="cus_addr" name="cus_addr" type="text" required="" placeholder="Address" aria-label="Email">
                </div>
                <p class="mt-4 my-2 text-gray-800 font-medium">Payment information</p>
                <div class="">
                    <label class="block mb-1 text-gray-600" for="cus_card">Card</label>
                    <input class="w-full pl-3 py-2 text-gray-700 bg-gray-100 rounded" id="cus_card" name="cus_card" type="text" required="" placeholder="Card Number MM/YY CVC" aria-label="Name">
                </div>
                <div class="mt-4">
                    <button class="px-4 py-2 text-white font-semibold tracking-wider bg-blue-600 hover:bg-blue-700 rounded" type="submit">Checkout</button>
                </div>
            </form>
        </div>
    </div>
</main>