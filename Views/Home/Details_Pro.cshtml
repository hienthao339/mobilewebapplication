@model WebApplication1.Models.product

@{
    ViewBag.Title = "Details_Pro";
}

@Html.Partial("_Notifications")

<main>
    <div>
        <div class="text-xs">
            <div class="px-4">
                <a href="@Url.Action("Index", "Home")">Home</a> \
                <a href="@Url.Action("SearchPage", "Home")">List</a> \
                <a href="#">@Html.DisplayFor(model => model.names)</a> \
            </div>

            <div class="w-75 grid grid-cols-4 grid-rows-2 mx-auto">
                <div class="col-span-2 m-4">
                    <img src="~/wwwroot/Images/Products/@Html.DisplayFor(model => model.images)"
                         class="w-full object-cover object-center mb-3">

                    <div class="mt-4 mb-3 font-medium text-lg">Technical Specification</div>
                    <div class="grid grid-cols-2">
                        <div class="font-medium grid col-span-1 space-y-2">
                            <div>Display</div>
                            <div>Operating System</div>
                            <div>Processor</div>
                            <div>Battery</div>
                            <div>External Memory</div>
                        </div>
                        <div class="grid col-span-1 space-y-2">
                            <div>
                                @Html.DisplayFor(model => model.display)
                            </div>
                            <div>
                                @Html.DisplayFor(model => model.operating_system)
                            </div>
                            <div>
                                @Html.DisplayFor(model => model.processor)
                            </div>
                            <div>
                                @Html.DisplayFor(model => model.battery)
                            </div>
                            <div>
                                @Html.DisplayFor(model => model.ram)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-span-2 m-4 text-xs">
                    <p class="text-xl font-bold">@Html.DisplayFor(model => model.names)</p>
                    <p class="font-light">@Html.DisplayFor(model => model.brand)</p>
                    @if (Model.promocode != null)
                    {
                        double a = Convert.ToDouble(Model.price.Value * (100 - Model.promocode.discount_price.Value) / 100);
                        <del class="text-xl tracking-tight text-gray-900 mt-3">$@Html.DisplayFor(model => model.price)</del>
                        <p class="text-3xl tracking-tight text-red-600 mt-3">$@a</p>
                    }
                    else
                    {
                        <p class="text-3xl tracking-tight text-red-600 mt-3">$@Html.DisplayFor(model => model.price)</p>
                    }

                    <!-- Reviews -->
                    <div class="mt-3">
                        <h3 class="sr-only">Reviews</h3>
                        <div class="flex items-center mb-1">
                            <svg aria-hidden="true" class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>First star</title><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                            <h3 class="ml-2 font-semibold">@Html.DisplayFor(model => model.rate)</h3>
                            <h3 class="ml-4 text-blue-600 dark:text-white">1,745 reviews</h3>
                            <div class="text-gray-300 font-semibold ml-4">Available: @Html.DisplayFor(model => model.quantity)</div>
                        </div>
                    </div>

                    <form class="my-3">
                        <!-- Colors -->
                        <div>
                            <h3 class="font-medium text-gray-900">Color</h3>
                            <fieldset class="mt-2">
                                <div class="flex items-center space-x-3">
                                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                        @foreach (var item in ViewData["pro"] as List<WebApplication1.Models.product>)
                                        {
                                            <a href="/Home/Details_Pro/@item.id_product" class="p-2 mr-2 text-center text-black rounded-md hover:bg-gray-100 hover:italic border">@item.color</a>
                                        }
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="flex space-x-3 mb-2 mt-6 ">

                            @if (Session["email"] != null)
                            {

                                <a href="/Shopping/BuyNow/@Html.DisplayFor(model => model.id_product)">
                                    <div style="text-decoration:none; color:black;text-align:center" class="p-3 rounded-md bg-blue-600 hover:bg-blue-700 text-light text-center font-medium" )">Buy</div>
                                </a>
                                <a href="/Shopping/AddToCart/@Html.DisplayFor(model => model.id_product)">
                                    <div style="text-decoration:none; color:black;text-align:center" class="p-3 rounded-md bg-gray-100 hover:bg-gray-200 font-medium" )">Add To Cart</div>
                                </a>
                            }
                            else
                            {
                                <a href="/ShoppingCart/BuyNow/@Html.DisplayFor(model => model.id_product)">
                                    <div style="text-decoration:none; color:black;text-align:center" class="p-3 rounded-md bg-blue-600 hover:bg-blue-700 text-light text-center font-medium" )">Buy</div>
                                </a>
                                <a href="/ShoppingCart/AddToCart/@Html.DisplayFor(model => model.id_product)">
                                    <div style="text-decoration:none; color:black;text-align:center" class="p-3 rounded-md bg-gray-100 hover:bg-gray-200 font-medium" )">Add To Cart</div>
                                </a>
                            }
                        </div>
                    </form>
                </div>
                <div class="col-span-2 m-4">
                    <div class="flex items-center mb-4 space-x-4">
                        @*<img class="w-10 h-10 rounded-full" src="https://tailwindui.com/img/ecommerce-images/product-page-02-secondary-product-shot.jpg" alt="">*@
                        <div class="space-y-1 font-medium dark:text-white">
                            <p>
                                Jese Leos <time datetime="2014-08-16 19:00"
                                                class="block text-gray-500 dark:text-gray-400">Joined on Auguest 2014</time>
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center mb-1">

                        <div class="mr-4 font-medium text-lg">John. Clerk</div>

