@{
    ViewBag.Title = "Chats";
}

<main>
    <div class="flex justify-start p-5">
        <aside class="w-48" aria-label="Sidebar">
            <div class="px-3 py-4 overflow-y-auto rounded bg-gray-50">
                <ul class="space-y-2">
                    <li>
                        <div href="#" class="items-center p-2 text-base font-normal text-gray-900 rounded-lg">
                            <img class="relative h-75 w-75 ms-2 mb-3 rounded-lg" src="https://i.pinimg.com/564x/64/cf/6f/64cf6f2685b6939f1a9418289c3dd647.jpg" />
                            <div class="ml-3">Name</div>
                        </div>
                    </li>
                    <li class="mt-5">
                        <a href="@Url.Action("Dashboard", "Home")" class="flex items-center p-2 text-base font-normal text-gray-900 rounded-lg hover:bg-blue-100 hover:text-blue-500">
                            <span class="flex-1 ml-3 whitespace-nowrap">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Order", "Home")" class="flex items-center p-2 text-base font-normal text-gray-900 rounded-lg hover:bg-blue-100 hover:text-blue-500">
                            <span class="flex-1 ml-3 whitespace-nowrap">Orders</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Chats", "Home")" class="flex items-center p-2 text-base font-medium text-blue-600 rounded-lg bg-blue-100 hover:bg-blue-200">
                            <span class="flex-1 ml-3 whitespace-nowrap">Chats</span>
                        </a>
                    </li>
                    <li class="mt-5">
                        <a href="@Url.Action("Index", "Home")" class="flex items-center p-2 text-base font-normal text-gray-900 rounded-lg hover:bg-gray-100 hover:text-blue-500">
                            <span class="flex-1 ml-3 whitespace-nowrap">Logout</span>
                            <i class="fa-solid fa-arrow-right-from-bracket"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>
        <div class="ms-5 max-w-full">
            <p class="text-4xl font-bold my-4">Chats</p>
            <p class="text-2xl">Let's talk.'</p>

        @*chat box*@
        <div class="my-2">
            <div class="my-4 p-4 border-solid border-black shadow-md rounded">
                <div class="text-center mb-4">
                    <p class="text-xl font-bold">CHAT WITH US</p>
                    <p>Our experts will reply you as soon as possible.</p>
                    <p>Please be patient a little while, sir.</p>
                </div>

                @*chatbox content*@
                <div>
                    <div class="row">
                        <div class="grid grid-cols-2 gap-4">
                            <div class="col-span-1 w-56 bg-gray-100 rounded-md">
                                <p class="m-2">What can we do for you, sir?</p>
                            </div>
                            <div class="col-span-1"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="grid grid-cols-2 gap-4">
                            <div class="col-span-1"></div>
                            <div class="col-span-1 max-w-sm bg-blue-600 text-white rounded-md justify-self-end">
                                <p class="m-2">I didn't receive my order last week.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="flex justify-between">
                <a href="#" class="btn rounded-full bg-gray-100 hover:bg-sky-300">
                    <i class="fa-solid fa-image"></i>
                </a>
                <a href="#" class="btn rounded-full bg-gray-100 hover:bg-sky-300 mx-2">
                    <i class="fa-solid fa-paperclip"></i>
                </a>
                <input type="text" class="form-control mx-2" placeholder="Enter your message..." aria-label="" aria-describedby="">
                <a href="#" class="btn rounded-full bg-gray-100 hover:bg-sky-300">
                    <i class="fa-solid fa-paper-plane"></i>
                </a>
            </div>
        </div>
        </div>
    </div>    
</main>