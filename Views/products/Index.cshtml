@model PagedList.IPagedList<WebApplication1.Models.product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using PagedList;
@using PagedList.Mvc;

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table m-3">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Images</th>
            <th scope="col">Names</th>
            <th scope="col">Price</th>
            <th scope="col">Discount Price</th>
            <th scope="col">quantity</th>
            <th scope="col">rate</th>
            <th scope="col">color</th>
            <th scope="col">brand</th>
            <th scope="col">Promocode</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/wwwroot/Images/Products/@Html.DisplayFor(modelItem=>item.images)" class="h-10" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.names)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.id_promo)
                </td>
                <td> 

                    <div class="flex space-x-2 font-medium">
                        <div class="p-3 text-sm rounded-lg bg-yellow-300 cursor-pointer">
                            <i class="fa-regular fa-pen-to-square"></i>
                            @Html.ActionLink("Edit", "Edit", new { id = item.id_product }, new { @class = "ms-1 text-black" })
                        </div>

                        <div class="p-3 text-sm rounded-lg bg-danger text-white">
                            <i class="fa-solid fa-xmark"></i>
                            @Html.ActionLink("Delete", "Delete", new { id = item.id_product }, new { @class = "ms-1 text-white" })
                        </div>
                        <div class="p-3 text-sm rounded-lg bg-blue-600 text-white">
                            <i class="fa-solid fa-info"></i>
                            @Html.ActionLink("Details", "Details", new { id = item.id_product }, new { @class = "ms-1 text-white" })
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<div id='Paging' style="text-align: center">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" href="@Url.Action("Index", "products", new { page = 1 })">Previous</a>
        </li>
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            int e = 0;
            e += i;
            Session["LastPage"] = e;
            <li class="page-item"><a class="page-link" href="@Url.Action("Index", "products", new { page = i })">@i</a></li>
        }
        <li class="page-item">
            <a class="page-link" href="@Url.Action("Index", "products", new { page = Session["LastPage"] })">Last</a>
        </li>
    </ul>
</nav>