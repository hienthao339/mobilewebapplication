
@{
    ViewBag.Title = "ShowToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebApplication1.Models.Carts
@Html.Partial("_Notifications")
<main class="p-6">
    <div class="text-neutral-500 text-xs px-4">
        (@Session["Quantity_pro"] items)
    </div>
    <div class="flex mb-lg-5">
        <a class="text-2xl font-bold" href="/Home/Index">Continue Shopping</a>
    </div>


    @if (Model != null)
    {
        <div class="row flex">
            <div class="col-lg-9">
                @*header*@
                <div class="row mb-4 pb-3 border-b font-medium">
                    <div class="col">Product</div>
                    <div class="col"></div>
                    <div class="col">Price</div>
                    <div class="col">Quantity</div>
                    <div class="col">Total Price</div>
                    <div class="col">Remove</div>


                </div>
                @foreach (var item in Model.Items)
                {
                    double total = Convert.ToDouble(item.Shopping_product.price.Value * item.Shopping_quantity);

                    @*body*@
                    <div class="row flex my-3 py-4 pr-4 shadow-sm">
                        @*Product*@
                        <div class="col flex flex-wrap w-50">
                            <img src="~/wwwroot/Images/Products/@item.Shopping_product.images"
                                 class="h-15" />
                        </div>
                        <div class="col flex flex-wrap w-50">
                            <div class="col grid-rows-4">
                                <div class="font-medium">@Html.DisplayFor(model => item.Shopping_product.names)</div>
                                <div class="font-light text-xs">@Html.DisplayFor(model => item.Shopping_product.brand)</div>
                                <div class="font-light text-xs">@Html.DisplayFor(model => item.Shopping_product.color)</div>
                                <a href="/Shopping/Details_Pro/@item.Shopping_product.id_product" class="text-blue-600 font-semibold text-xs mt-4">Learn More 🡥</a>
                            </div>
                        </div>

                        @*Price*@
                        <div class="col">
                            <div class="flex">
                                $@Html.DisplayFor(model => item.Shopping_product.price)
                            </div>
                        </div>

                        @*Quantity*@
                        <div class="col">
                            <div class="flex">
                                <a href="/ShoppingCart/btn_Decrease/@item.Shopping_product.id_product" class="text-center text-black py-1 px-2.5 bg-gray-100 hover:bg-gray-200 rounded-md">
                                    <i class="fa-solid fa-minus text-xs"></i>
                                </a>
                                <input type="text" value="@item.Shopping_quantity" readonly="readonly" style="width: 30px;" class="text-center" />
                                <a href="/ShoppingCart/btn_Increase/@item.Shopping_product.id_product" class="text-center text-black py-1 px-2.5 bg-gray-100 hover:bg-gray-200 rounded-md">
                                    <i class="fa-solid fa-plus text-xs"></i>
                                </a>

                            </div>
                        </div>

                        <div class="col" style="text-align:center">
                            <div class="flex">
                                $@total.00
                            </div>
                        </div>


                        @*Remove/Check*@
                        <div class="col">
                            <div class="flex">
                                <a href="/Shopping/RemoveCart/@item.Shopping_product.id_product" class="bg-red-100 text-center py-1 px-2.5 hover:bg-red-200 rounded-md">
                                    <i class="fa-solid fa-xmark text-red-600 text-xs"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @*Place Order*@
        <div class="col-lg-3">
            <div class="font-medium mb-2">Shipping Info</div>
            <div class="text-gray-400 font-light text-xs">Fill your order</div>
            @using (Html.BeginForm("CheckOut", "ShoppingCart"))
            {

                @*Email*@
                <div class="mt-2 text-black">
                    <div class="relative w-full" data-te-input-wrapper-init>
                        <label for="email" class="text-sm">Email</label><br />
                        <input type="text" class="font-light text-black border-b py-2 pl-3 w-full mt-2" placeholder="Enter your email" name="email" />
                    </div>
                </div>
                <div class="mt-2 text-black">
                    <div class="relative w-full" data-te-input-wrapper-init>
                        <label for="phone" class="text-sm">Phone</label><br />
                        <input type="text" class="font-light text-black border-b py-2 pl-3 w-full mt-2" placeholder="Enter your phone number" name="phone" />
                    </div>
                </div>
                <div class="mt-2 text-black">
                    <div class="relative w-full" data-te-input-wrapper-init>
                        <label for="street" class="text-sm">Street</label><br />
                        <input type="text" class="font-light text-black border-b py-2 pl-3 w-full mt-2" placeholder="Enter your street" name="address" />
                    </div>
                </div>
                <div class="mt-2 text-black">
                    <div class="relative w-full" data-te-input-wrapper-init>
                        <label for="district" class="text-sm">District</label><br />
                        <input type="text" class="font-light text-black border-b py-2 pl-3 w-full mt-2" placeholder="Enter your district" name="district" />
                    </div>
                </div>
                <div class="mt-2 text-black">
                    <div class="relative w-full" data-te-input-wrapper-init>
                        <label for="ward" class="text-sm">Ward</label><br />
                        <input type="text" class="font-light text-black border-b py-2 pl-3 w-full mt-2" placeholder="Enter your ward" name="ward" />
                    </div>
                </div>
                <div class="mt-2 text-black">
                    <div class="relative w-full" data-te-input-wrapper-init>
                        <label for="city" class="text-sm">City</label><br />
                        <input type="text" class="font-light text-black border-b py-2 pl-3 w-full mt-2" placeholder="Enter your city" name="city" />
                    </div>
                </div>
                <div class="mt-2 text-black">
                    <div class="relative w-full" data-te-input-wrapper-init>
                        <label for="card-number" class="text-sm">Card</label><br />
                        <input type="text" class="font-light text-black border-b py-2 pl-3 w-full mt-2" placeholder="Enter your card number" name="card-number" />
                    </div>
                </div>

                @*Promo Code*@
                <div class="font-medium my-2">Apply Coupon</div>
                <div class="text-gray-400 font-light text-xs">Using A Promo Code?</div>

                @*Enter promo-code*@
                <div class="mt-2 text-black">
                    <div class="relative w-full" data-te-input-wrapper-init>
                        <label for="code" class="text-sm">Promocode</label><br />
                        <input type="text" class="font-light text-black border-b py-2 pl-3 w-full mt-2" placeholder="Enter your promocode" name="code" />
                    </div>
                </div>

                @*Apply Promo-Code*@
                <!--<a class="bg-yellow-300 py-2.5 px-3 text-black text-xs font-semibold ml-2 rounded-md" style="width:fit-content; height: fit-content;">Apply</a>
            </div>-->


                    @*Order Sumamry*@
                    <div class="">
                        <div class="mb-2 font-medium pb-2 my-2 border-b">Order Summary</div>
                        <div class="d-flex justify-content-between my-2">
                            <p>Total</p>
                            <p>$@Session["TotalCost"].00</p>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <p>Shipping</p>
                            <p>$@Session["Shipping"].00</p>
                        </div>

                        <div class="d-flex justify-content-between pb-2 mb-2 border-b">
                            <p>Discount</p>
                            <p>$0.00</p>
                        </div>
                        <div class="d-flex justify-content-between my-2">
                            <p>Subtotal</p>
                            <p>$@Session["Total_order"].00</p>
                        </div>

                        <input class="btn bg-blue-600 hover:bg-blue-800 w-full rounded-md text-white text-center text-md font-medium py-2 mt-2" type="submit" value="Checkout" />

                    </div>
                }
            </div>
        </div>
    }
</main>
