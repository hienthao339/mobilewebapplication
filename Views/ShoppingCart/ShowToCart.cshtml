
@{
    ViewBag.Title = "ShowToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebApplication1.Models.Carts

<main class="p-6">
    <div class="text-neutral-500 text-xs px-4">
        (@Session["Quantity_pro"] items)
    </div>
    <div class="flex mb-lg-5">
        <a class="text-2xl font-bold" href="/Home/Index">Continue Shopping</a>
    </div>


    @if (Model != null)
    {
        <div class="row flex">
            <div class="col-lg-9">
                @*header*@
                <div class="row mb-4 pb-3 border-b font-medium">
                    <div class="col">Product</div>
                    <div class="col"></div>
                    <div class="col">Price</div>
                    <div class="col">Quantity</div>
                    <div class="col">Total Price</div>
                    <div class="col">Remove</div>


                </div>
                @foreach (var item in Model.Items)
                {
                    double total = Convert.ToDouble(item.Shopping_product.price.Value * item.Shopping_quantity);

                    @*body*@
                    <div class="row flex my-3 py-4 pr-4 shadow-sm">
                        @*Product*@
                        <div class="col flex flex-wrap w-50">
                            <img src="~/@item.Shopping_product.images"
                                 class="h-15" />
                        </div>
                        <div class="col flex flex-wrap w-50">
                            <div class="col grid-rows-4">
                                <div class="font-medium">@Html.DisplayFor(model => item.Shopping_product.names)</div>
                                <div class="font-light text-xs">@Html.DisplayFor(model => item.Shopping_product.brand)</div>
                                <div class="font-light text-xs">@Html.DisplayFor(model => item.Shopping_product.color)</div>
                                <a href="/Shopping/Details_Pro/@item.Shopping_product.id_product" class="text-blue-600 font-semibold text-xs mt-4">Learn More 🡥</a>
                            </div>
                        </div>

                        @*Price*@
                        <div class="col">
                            <div class="flex">
                                $@Html.DisplayFor(model => item.Shopping_product.price)
                            </div>
                        </div>

                        @*Quantity*@
                        <div class="col">
                            <div class="flex">
                                <a href="/ShoppingCart/btn_Decrease/@item.Shopping_product.id_product" class="text-center text-black py-1 px-2.5 bg-gray-100 hover:bg-gray-200 rounded-md">
                                    <i class="fa-solid fa-minus text-xs"></i>
                                </a>
                                <input type="text" value="@item.Shopping_quantity" readonly="readonly" style="width: 30px;" class="text-center" />
                                <a href="/ShoppingCart/btn_Increase/@item.Shopping_product.id_product" class="text-center text-black py-1 px-2.5 bg-gray-100 hover:bg-gray-200 rounded-md">
                                    <i class="fa-solid fa-plus text-xs"></i>
                                </a>

                            </div>
                        </div>

                        <div class="col" style="text-align:center">
                            <div class="flex">
                                $@total.00
                            </div>
                        </div>


                        @*Remove/Check*@
                        <div class="col">
                            <div class="flex">
                                <a href="/Shopping/RemoveCart/@item.Shopping_product.id_product" class="bg-red-100 text-center py-1 px-2.5 hover:bg-red-200 rounded-md">
                                    <i class="fa-solid fa-xmark text-red-600 text-xs"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @*Place Order*@
            <div class="col-lg-3">
                <div class="font-medium mb-2">Shipping Info</div>
                <div class="text-gray-400 font-light text-xs">Fill your order</div>
